  <%= form_for [@recipe, @ingredient] do |f| %>
  <%= f.label :item, "Item (required)" %>
  <%= f.text_field :item %>

  <%= f.label :unit, "Unit (required)" %>
  <%= f.select :unit, options_for_select(@units) %>

  <%= f.label :quantity, "Quantity (required)" %>
  <%= f.text_field :quantity %>

  <%= f.submit "Save", class:"button" %>
  <% end %>
