<div class="row new-resource">
  <h1 class="row static-header">
    <div class="small-6 large-centered columns">
      Batches
    </div>
  </h1>

  <div class="row">
    <div class="small-6 large-centered columns">
      <% if params[:recipe_id].nil? %>
        <% @all_batches.each do |b| %>
          <li><%= link_to b.batch_name, batch_path(b) %></li>
        <% end %>
      <% else %>
        <% @recipe_batches.each do |b| %>
          <li><%= link_to b.batch_name, batch_path(b) %></li>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
