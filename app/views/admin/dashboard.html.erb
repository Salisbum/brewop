<h2>Profiles Index</h2>

<% if current_user.admin? %>
  <% if @profiles.nil? %>
    There are no profiles to display.
  <% else %>
    <% @profiles.each do |profile| %>
      User: <%= profile.user.id %> | Profile: <%= profile.id %>: <%= link_to "#{profile.user.email}", profile_path(profile.id) %>
      <%= button_to "Delete", profile_path(profile), class:"button", method: "delete" %>
    <% end %>
  <% end %>
<% else %>
  You do not have permission to view this page.
<% end %>


<h2>Recipes Index</h2>

<% if current_user.admin? %>
<h1>All Recipes in App</h1>
  <% if @admin_recipes.nil? %>
    No users have submitted recipes yet!
    <% else %>
      <div id="menu">
        <% @admin_recipes.each do |recipe| %>
          <li><%= link_to recipe.name, recipe_path(recipe) %></li>
        <% end %>
      </div>
  <% end %>
<% else %>
  You do not have permission to view this page.
<% end %>
