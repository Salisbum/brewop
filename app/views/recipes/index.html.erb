<div class="row">
  <div class="small-2 large-4 columns">
    <h1>Your Recipes</h1>
  </div>

  <div class="small-2 large-3 columns", id="new-recipe">
    <%= link_to "Add New Recipe", new_recipe_path, class:"button", id:"new-resource" %>
  </div>
</div>

<div class="row">
  <% if @recipes.empty? %>
    No recipes yet!
  <% else %>
    <% @recipes.each do |recipe| %>
      <div class="row", id="recipe-list">
        <div class="small-4 columns", id="recipe-title">
          <li><%= link_to recipe.name, recipe_path(recipe) %></li>
        </div>
        <div class="small-8 columns">
          <%= recipe.beer_type %>, <%= recipe.description %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
