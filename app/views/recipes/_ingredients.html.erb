<h2>Ingredients</h2>
<p>
   <%= link_to "New Ingredient", new_recipe_ingredient_path(@recipe) %>
</p>
<div class="details" id="details">
  <% @ingredients.each do |i| %>
    <li><%= i.quantity %> <%= i.unit %> | <%= link_to i.item, recipe_ingredient_path(i.recipe.id, i.id) %></li>
  <% end %>
</div>
